  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Jest Tests",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest",
      "args": [
        "${workspaceFolder}/tests/unittests.ts"
      ],
      "sourceMaps": true,
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}/server/server.ts",
      "stopOnEntry": true,
      "outFiles": [
        "${workspaceFolder}/server/*.js"
      ]
    }
  ]
}
