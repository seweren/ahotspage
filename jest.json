{
  "globals": {
    "ts-jest": {
      "tsConfigFile": "tests.tsconfig.json"
    }
  },
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "testMatch": [
    "*/**/unittests.ts"
  ],
  "collectCoverage": true,
  "mapCoverage": true,
  "coverageReporters": [
    "text",
    "html"
  ],
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node"
  ]
}
